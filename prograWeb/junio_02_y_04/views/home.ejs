<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Home</title>
        <link rel="stylesheet" href="../public/main.css">
    </head>
    <body>
        <h1>Usuarios</h1>
        <table>

            <tr >
                <div class="primerFila">
                    <th>Nombre</th>
                    <th>Contrase√±a</th>
                    <th>id</th>
                    <th>Eliminar</th>
                    <th>Edit</th>
                </div>
            </tr>

            <% users.forEach(function(o) { %>

                <tr>
                    <td>
                        <%= o.username %></td>
                    <td>
                        <%= o.password %></td>
                    <td>
                        <%= o._id %></td>
                    <td>
                        <form action="/borrado/<%= o._id %>" method="POST">
                            <button type="submit">Eliminar</button>
                        </form>
                    </td>
                    <td>
                        <form action="/actualizar/<%= o._id %>" method="POST">
                            <button type="submit">Actualizar</button>
                        </form>
                    </td>
                </tr>
                <% }); %>
                </table>
            </body>
        </html>